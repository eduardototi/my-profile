
<div class="container-form mt-4" >
  <%= simple_form_for(technology) do |f| %>
    <h3 class="text-center">Cadastrar Técnologia</h3>
    <div class="form-inputs">
      <%= f.input :name, label: "Nome" %>
      <%= f.input :description, label: "Descrição" %>
      <%= f.input :photo, as: :file %>
    </div>
    <div class="form-actions text-center">
      <%= f.button :submit, "Enviar", class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>